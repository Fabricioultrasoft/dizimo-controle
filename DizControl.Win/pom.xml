<?xml version="1.0" encoding="utf-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns="http://maven.apache.org/POM/4.0.0">
  <parent>
    <artifactId>DizControl-parent</artifactId>
    <groupId>DizControl</groupId>
    <version>1.0-SNAPSHOT</version>
    <relativePath>..\pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>DizControl.Win</artifactId>
  <packaging>winexe</packaging>
  <name>DizControl : DizControl.Win</name>
  <build>
    <sourceDirectory>./</sourceDirectory>
    <resources>
      <resource>
        <directory>./</directory>
        <includes>
          <include>Properties\licenses.licx</include>
        </includes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.apache.npanday.plugins</groupId>
        <artifactId>maven-compile-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <frameworkVersion>4.0</frameworkVersion>
          <includeSources>
            <includeSource>Program.cs</includeSource>
            <includeSource>Properties\AssemblyInfo.cs</includeSource>
            <includeSource>Properties\Resources.Designer.cs</includeSource>
            <includeSource>WinApplication.cs</includeSource>
            <includeSource>WinApplication.Designer.cs</includeSource>
            <includeSource>Properties\Settings.Designer.cs</includeSource>
          </includeSources>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.npanday.plugins</groupId>
        <artifactId>maven-test-plugin</artifactId>
        <configuration>
          <integrationTest>true</integrationTest>
          <executionFrameworkVersion>4.0</executionFrameworkVersion>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.npanday.plugins</groupId>
        <artifactId>maven-resgen-plugin</artifactId>
        <configuration>
          <embeddedResources>
            <embeddedResource>
              <sourceFile>Properties\Resources.resx</sourceFile>
              <name>DizControl.Win.Properties.Resources</name>
            </embeddedResource>
            <embeddedResource>
              <sourceFile>WinApplication.resx</sourceFile>
              <name>DizControl.Win.WinApplication</name>
            </embeddedResource>
          </embeddedResources>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>DizControl</groupId>
      <artifactId>DizControl.Module.Win</artifactId>
      <version>1.0-SNAPSHOT</version>
      <type>library</type>
    </dependency>
    <dependency>
      <groupId>DizControl</groupId>
      <artifactId>DizControl.Module</artifactId>
      <version>1.0-SNAPSHOT</version>
      <type>library</type>
    </dependency>
  </dependencies>
</project>